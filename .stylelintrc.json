{
  "extends": "stylelint-config-standard-scss",
  "rules": {
    "selector-class-pattern": null,
    "property-no-vendor-prefix": null,
    "indentation": 2,
    "scss/double-slash-comment-empty-line-before": [
      "always",
      {
        "except": [
          "first-nested",
          "inside-block"
        ]
      }
    ]
  }
}
